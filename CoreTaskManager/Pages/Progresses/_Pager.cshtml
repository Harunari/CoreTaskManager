<form method="post">
    <nav aria-label="Page navigation">
        <ul class="pagination">
            <li class="page-item"><input type="submit" asp-page-handler="prevpage" class="page-link" value="Previous" /></li>
            <li class="page-item"><input type="submit" asp-page-handler="currentpage" class="page-link" value="@ViewData["CurrentPage"]" /></li>
            <li class="page-item"><input type="submit" asp-page-handler="nextpage" class="page-link" value="Next" /></li>
        </ul>
    </nav>
</form>